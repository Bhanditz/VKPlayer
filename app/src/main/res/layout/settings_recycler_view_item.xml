<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_list_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/settings_recycler_view_switch"
        android:layout_toStartOf="@+id/settings_recycler_view_switch"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_recycler_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Paradise"
            android:textColor="@color/settings_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/settings_recycler_view_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/settings_text_color"
            android:textSize="10dp" />
    </LinearLayout>

    <Switch
        android:id="@+id/settings_recycler_view_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>

