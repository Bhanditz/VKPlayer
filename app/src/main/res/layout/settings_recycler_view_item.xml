<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_list_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/settings_recycler_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/settings_recycler_view_switch"
        android:layout_toStartOf="@+id/settings_recycler_view_switch"
        android:singleLine="true"
        android:text="Paradise"
        android:textColor="@color/player_list_element_song_name"
        android:textSize="16dp" />

    <Switch
        android:id="@+id/settings_recycler_view_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>

